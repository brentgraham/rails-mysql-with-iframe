<div id="c66FrameContainer" style="background: transparent; position: fixed; bottom: 0px; left: 0px; margin: 0px; padding: 0px; z-index: 2147483647; width:400px; height: 50vh" data-frame="https://maestro-brent.eu.ngrok.io/admin_frame/911">
</div>

<script>
  console.log('==== parent page script start ====')

  let C66frame = {
      init: function() {
         console.log('FROM IFRAME -- Add the iframe to the page');
         this.addFrame();
         window.addEventListener("message", C66frame.onMessage, false);
         this.bindEvents();
     },

     bindEvents: function() {

     },

     addFrame: function() {
         const frameContainer = document.querySelector('#c66FrameContainer');
         const iframe = document.createElement("iframe");

         iframe.src = frameContainer.dataset.frame;
         iframe.id = "c66Frame";
         iframe.tabindex = 0;
         iframe.loading = "lazy";
         iframe.frameborder = "0";
         iframe.scrolling = "yes";
         iframe.style.border = "none";
         iframe.style.width = "400px";
         // iframe.style.height = "50vh";

         frameContainer.appendChild(iframe);
     },

     onMessage: function() {
         console.log('C66frame onMessage  function called');
         // Check sender origin to be trusted
         // if (event.origin !== "http://example.com") return;

         var data = event.data;
         console.log('C66frame onmessage data received: ', data);

         if ( typeof(C66frame[data.func]) == "function" ) {
             C66frame[data.func].call(null, data.message);
         }
     },

     parentFunc(message) {
         // this function called from iframe
         console.log('============ logging from the parent page: parentFunc');
         console.log(message);
         C66frame.updateEl(message);
         // location.reload();
     },

     updateEl(msg) {
        document.getElementById('para').innerHTML = msg;
    },

    toggleFrame() {
        console.log('toggleFrame called');
        const iframe = document.querySelector('#c66Frame');
        iframe.style.height = "50px";
        iframe.classList.toggle('toggled');
    }
  }

  C66frame.init();
</script>
