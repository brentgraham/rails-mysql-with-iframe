<!-- Begin Admin Frame Content -->
<!-- Need to update data-frame with the correct stack url -->
<div id="c66FrameContainer"
    style="background: transparent; position: fixed; bottom: 0px; left: 0px; margin: 0px; padding: 0px; z-index: 2147483647; height: 55vh;"
    data-frame="https://maestro-brent.eu.ngrok.io/admin_frame/915">
</div>

<script>
  console.log('==== parent page script start ====')

  let C66frame = {
      init: function() {
         this.addFrame();
         // Allow  iframe to send messages to the parent page via onMessage function
         window.addEventListener("message", C66frame.onMessage, false);
     },

     addFrame: function() {
         console.log('Append the C66 iframe into the page.');

         const frameContainer = document.querySelector('#c66FrameContainer');
         const iframe = document.createElement("iframe");

         iframe.src = frameContainer.dataset.frame;
         iframe.id = "c66Frame";
         iframe.tabindex = 0;
         iframe.loading = "lazy";
         iframe.frameborder = "0";
         iframe.scrolling = "no";
         iframe.style.border = "none";
         iframe.style.width = "420px";
         iframe.style.height = "55vh";

         frameContainer.appendChild(iframe);
     },

     onMessage: function() {
         console.log('C66frame onMessage  function called');
         // Check sender origin to be trusted
         // if (event.origin !== "http://example.com") return;

         var data = event.data;
         console.log('C66frame onmessage data received: ', data);

         if ( typeof(C66frame[data.func]) == "function" ) {
             C66frame[data.func].call(null, data);
         }
     },

     onFayeUpdate(data) {
         // Called from iframe after a faye update
         console.log('============ logging from the parent page: parentFunc');
         console.log(data);
         document.getElementById('para').innerHTML = data.message;
     },

    refreshPage: function() {
        location.reload();
    },

    toggleFrame: function() {
        // this function called from iframe to minimize/mazimize the frame injected into the page
        console.log('toggleFrame called');
        const iframeContainer = document.querySelector('#c66FrameContainer');
        const iframe = document.querySelector('#c66Frame');
        if (iframeContainer.classList.contains('minimised')) {
            iframeContainer.classList.toggle('minimised');
            iframeContainer.style.height = "55vh";
            iframe.style.height = "55vh";
            iframe.style.width = "420px";
        } else {
            iframeContainer.style.height = "63px";
            iframe.style.height = "63px";
            iframe.style.width = "66px";
            iframeContainer.classList.toggle('minimised');
        }
    }
  }

  C66frame.init();
</script>
