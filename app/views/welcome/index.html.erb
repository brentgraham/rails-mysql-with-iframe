<script>
  console.log('==== parent page script start ====')

  const C66frame = {
      init: function() {
         console.log('FROM IFRAME -- Add the iframe to the page');
         this.addFrame();
         window.addEventListener("message", C66frame.onMessage, false);
     },

     addFrame: function() {
         const frameContainer = document.querySelector('#c66FrameContainer');
         const iframe = document.createElement("iframe");

         iframe.src = frameContainer.dataset.frame;
         iframe.tabindex = 0;
         iframe.loading = "lazy";
         iframe.frameborder = "0";
         iframe.scrolling = "yes";
         iframe.style.border = "none";
         iframe.style.width = "400px";
         iframe.style.height = "50vh";

         frameContainer.appendChild(iframe);
     },

     onMessage: function() {
         // Check sender origin to be trusted
         // if (event.origin !== "http://example.com") return;

         var data = event.data;
         console.log('onmessage data', data);
         if (typeof(window[data.func]) == "function") {
             window.C66frame[data.func].call(null, data.message);
         }
     },

     parentFunc(message) {
         // this function called from iframe
         console.log('logging from the parent page: parentFunc');
         console.log(message);
         this.updateEl(message);
         // location.reload();
     },

     updateEl(msg) {
        document.getElementById('para').innerHTML = msg;
     }
  }

